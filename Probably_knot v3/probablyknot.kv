<Manager>:
    Main:
        id: main
        name: 'main'
    Analyzer:
        id: analyze
        name: 'analyzer'


<Main>:
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            id: toolbar
            title: "Probably Knot v3"
            md_bg_color: app.theme_cls.primary_dark
            elevation: 9
            left_action_items: [["help-circle-outline", lambda x: app.root.get_screen('main').open_dialog()]]
            right_action_items: [["chevron-right", lambda x: app.change_screen('analyzer')]]
        MDFloatLayout:
            MDTextField:
                id: sentence
                icon_right: "book-open-outline"
                icon_right_color: app.theme_cls.primary_color

                hint_text: "Enter Sentence"
                helper_text: "Write a problem statement to analyze"
                helper_text_mode: "on_focus"
                multiline: False
                pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                size_hint_x: None
                width: root.width - dp(30)
            # MDTextField:
            #     id: word
            #     icon_right: "lead-pencil"
            #     icon_right_color: app.theme_cls.primary_color

            #     hint_text: "Enter Word"
            #     helper_text: "Write ONE word from the above sentence"
            #     helper_text_mode: "on_focus"
            #     multiline: False
            #     pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            #     size_hint_x: None
            #     width: root.width - dp(20)
        MDSeparator:

        MDStackLayout:
            orientation: 'lr-tb'
            pos_hint: {'center_x': 0.5, 'center_y': 1}
            padding: dp(15)
            spacing: dp(5)

            MDChooseChip:
                id: stack
        MDFloatLayout:
            MDFloatingActionButton:
                id: analyze_btn
                icon: "brain"
                # md_bg_color: app.theme_cls.primary_light
                md_bg_color: app.theme_cls.accent_color
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                user_font_size: 64
                elevation_normal: 10
                disabled: True
                on_press: app.root.get_screen('analyzer').analyze(root)
                on_release: app.root.current = 'analyzer'


<Analyzer>:
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            id: toolbar
            title: "Probably Knot v3"
            md_bg_color: app.theme_cls.primary_dark
            elevation: 10
            right_action_items: [["chevron-left", lambda x: app.change_screen('main')]]
            # MDIconButton:
            #     icon: 'backspace'
            #     #md_bg_color: app.theme_cls.primary_color
            #     on_release: app.root.current = 'main'
        ScrollView:
            MDList:
                id: container
